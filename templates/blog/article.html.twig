{% extends "base.html.twig" %}

{% block title %} Article {% endblock %}

{% block body %}

<table class="table table-striped table-bordered">
    <tr>
        <th>Titre</th>
        <th>resume</th>
        <th>date</th>
        <th>auteur</th>
    </tr>
    {% set c = 0 %}

    {% for a in articles %}

    {% if ( a.auteur|lower == auteur|lower or auteur == '' )%}
    <tr>
        <td> {{a.titre}} {% if date(a.date_publication) < date('-2 years') %} <em> ( Archiv√© ) </em> {% endif %} </td>
        <td> {{a.resume}} </td>
        <td>{{a.date_publication | date('d/m/Y')}} </td>
        <td> {{a.auteur}} </td>
    </tr>

    {% set c = c + 1 %}
    
    {% endif %}        
       

        
    {% endfor %}

     {% if c == 0 %}
        <tr>
        <td colspan='4' class="text-center" >Tableau vide</td>
        </tr>
    {% endif %}

</table>



{% endblock %}